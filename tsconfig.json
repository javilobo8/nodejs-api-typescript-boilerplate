{
  "extends": "@tsconfig/node16/tsconfig.json",
  "compilerOptions": {
    "outDir": "build",
    "noImplicitAny": true,
    "allowJs": true
  },
  "include": ["src"],
  "exclude": [
    "node_modules",
    "src/**/*.spec.ts",
    "src/**/*.test.ts"
  ],
  "paths": {
    "*": ["node_modules/*", "src/types/*"]
  }
}